---
import "../styles/global.css";

const siteMetadata = {
  title: "Feliz Natal · Organize seu Amigo Secreto",
  description:
    "Gerencie sorteios, convites e listas de presentes em um painel inteligente feito para celebrar o Natal sem stress.",
  url: "https://feliz.natal.br/",
  imagePath: "/og-image.png",
};

const absoluteOgImage = new URL(
  siteMetadata.imagePath,
  siteMetadata.url
).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" sizes="192x192" href="/android-chrome-192x192.png" />
    <link rel="icon" sizes="512x512" href="/android-chrome-512x512.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteMetadata.title}</title>
    <meta name="description" content={siteMetadata.description} />
    <meta
      name="keywords"
      content="amigo secreto, natal, sorteio automático, convites, listas de presentes"
    />
    <meta name="author" content="Feliz Natal SaaS" />
    <meta name="robots" content="index,follow" />
    <link rel="canonical" href={siteMetadata.url} />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Feliz Natal SaaS" />
    <meta property="og:title" content={siteMetadata.title} />
    <meta property="og:description" content={siteMetadata.description} />
    <meta property="og:url" content={siteMetadata.url} />
    <meta property="og:image" content={absoluteOgImage} />
    <meta property="og:image:alt" content="Logo Feliz Natal SaaS" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteMetadata.title} />
    <meta name="twitter:description" content={siteMetadata.description} />
    <meta name="twitter:image" content={absoluteOgImage} />
    <meta name="twitter:site" content="@feliznatal" />
    <meta name="twitter:creator" content="@feliznatal" />
  </head>
  <body>
    <slot />
    <script is:inline>
      (function () {
        if (!("serviceWorker" in navigator)) {
          window.__FelizNatalPrecache = () => {};
          return;
        }

        const pending = new Set();
        let activeRegistration = null;

        const normalize = (value) => {
          if (!value) return null;
          try {
            const url = new URL(value, window.location.origin);
            return url.pathname + url.search;
          } catch (err) {
            console.warn("Não foi possível normalizar a rota para cache:", value);
            return null;
          }
        };

        const flushQueue = () => {
          if (!activeRegistration?.active || pending.size === 0) return;
          activeRegistration.active.postMessage({
            type: "PRECACHE",
            urls: Array.from(pending)
          });
          pending.clear();
        };

        const ensureRegistrationReady = () => {
          return navigator.serviceWorker.ready
            .then((registration) => {
              if (registration) {
                activeRegistration = registration;
                flushQueue();
              }
              return registration;
            })
            .catch((error) => {
              console.warn("Service worker não ficou pronto para cache antecipado:", error);
            });
        };

        window.__FelizNatalPrecache = (routes) => {
          const values = Array.isArray(routes) ? routes : [routes];
          values.forEach((route) => {
            const normalized = normalize(route);
            if (normalized) pending.add(normalized);
          });
          if (activeRegistration?.active) {
            flushQueue();
          } else {
            ensureRegistrationReady();
          }
        };

        const register = () => {
          navigator.serviceWorker
            .register("/sw.js")
            .then((registration) => {
              if (registration?.active) {
                activeRegistration = registration;
                flushQueue();
              } else {
                ensureRegistrationReady();
              }
            })
            .catch((error) =>
              console.error("Falha ao registrar o service worker", error)
            );
        };

        if (document.readyState === "complete") {
          register();
        } else {
          window.addEventListener("load", register, { once: true });
        }
      })();
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
