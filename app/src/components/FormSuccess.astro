---
const { message = 'Operação realizada com sucesso!', description = null } = Astro.props;
---
<div class="rounded-2xl border border-[rgba(42,157,143,0.35)] bg-[rgba(42,157,143,0.08)] px-5 py-4 text-[var(--color-text)] shadow-[0_10px_22px_rgba(42,157,143,0.12)]">
  <div class="flex items-start gap-3">
    <span class="inline-flex h-8 w-8 items-center justify-center rounded-full bg-[rgba(42,157,143,0.15)] text-[var(--color-primary)]">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="h-4 w-4">
        <path
          fill-rule="evenodd"
          d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.78-9.78a.75.75 0 0 0-1.06-1.06L9 11.94l-1.72-1.72a.75.75 0 0 0-1.06 1.06l2.25 2.25a.75.75 0 0 0 1.06 0l4.25-4.25Z"
          clip-rule="evenodd"
        />
      </svg>
    </span>
    <div class="space-y-1">
      <p class="font-semibold text-sm">{message}</p>
      {description && (
        <p class="text-xs text-[var(--color-text-muted)]">
          {description}
        </p>
      )}
    </div>
  </div>
</div>
